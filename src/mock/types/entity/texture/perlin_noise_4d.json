{
  "name": "perlin_noise_4d",
  "group": "texture",
  "description": "Perlin Noise 4D - Procedural noise generation (https://docs.rs/noise/0.7.0/noise/)",
  "components": [
    "texture_gate"
  ],
  "properties": [
    {
      "name": "x",
      "data_type": "object",
      "socket_type": "input"
    },
    {
      "name": "y",
      "data_type": "object",
      "socket_type": "input"
    },
    {
      "name": "z",
      "data_type": "object",
      "socket_type": "input"
    },
    {
      "name": "v",
      "data_type": "object",
      "socket_type": "input"
    },
    {
      "name": "result",
      "data_type": "object",
      "socket_type": "output"
    }
  ],
  "palette": {
    "className": "inexor-ecs-th-outline"
  },
  "shape": {
    "width": 200,
    "socket": {
      "width": 60,
      "height": 30,
      "offset": 5
    },
    "offset": {
      "top": "socket.height",
      "bottom": "socket.height"
    },
    "elements": {
      "title": {
        "show": true,
        "content": "element.description",
        "position": {
          "left": 0,
          "top": 0,
          "width": "shape.width",
          "height": "socket.height"
        },
        "styles": {
          "font-size": "12px",
          "color": "black"
        }
      },
      "symbol": {
        "show": true,
        "content": "\uE856",
        "position": {
          "left": 0,
          "top": 0,
          "width": "shape.width",
          "height": "shape.height"
        },
        "styles": {
          "font-size": "40px",
          "fill": "maroon",
          "font-family": "inexor-ecs"
        }
      },
      "id": {
        "show": true,
        "content": "shape.id",
        "position": {
          "left": 0,
          "top": "shape.height-socket.height",
          "width": "shape.width",
          "height": "socket.height"
        },
        "styles": {
          "font-size": "9px",
          "color": "black"
        }
      }
    }
  }
}
